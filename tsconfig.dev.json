{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "core-js/es7/reflect": [
        "node_modules/core-js/proposals/reflect-metadata"
      ],
      "core-js/es6/*": ["node_modules/core-js/es"],
      "core-js/es7/*": ["node_modules/core-js/es"],
      "ngx-formly-designer": [
        "projects/ngx-formly-designer/src/public_api"
      ],
      "ngx-formly-designer/*": [
        "projects/ngx-formly-designer/src/*"
      ]
    }
  },
  "include": [
    "src/**/*.d.ts"
  ]
}